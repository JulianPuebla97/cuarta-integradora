{{> navBar}}

<h1  style="box-shadow: 0 0 1rem rgb(0, 0, 0)">Cart</h1>
<h3 class="cartId">ID: <span id="cartId">{{cid}}</span></h3>

{{#if cartProducts}}
<h2 class="cartProductsTitle">Products</h2>

<div class="cartProducts">
  {{#each cartProducts}}
  {{> cardCart}}
  {{/each}}
  <h4 id="total"></h4>
  <form action="/api/carts/{{cid}}/purchase" method="POST" style="display: flex; justify-content: center;">
    <button style="margin: 2%;font-size:20px;color:yellow" type="submit">Finalizar Compra</button>
  </form>
</div>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script src="js/cart.js"></script>
{{else}}
<h2 class="cartProductsTitle" >Empty Cart</h2>
{{/if}}

